@{
    ViewData["Title"] = "Home Page";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<h5>Imóveis</h5>
<br />
<button type="button" class="btn btn-primary div-buttonCriarImovel" aria-label="Center Align" id="btnNewImovel">CRIAR NOVO IMÓVEL</button>
<br />

<br />
<br />

<div id="imoveis">
    
</div>

<style>
    .div-buttonCriarImovel {
        right: 27px;
        position: absolute;
    }
</style>

<script>
    $(document).ready(function() { 
        const urlParams = new URLSearchParams(window.location.search);
        const novoRegistro = urlParams.get('novoRegistro');
        const novoDelete = urlParams.get('novoDelete');
        const novaAlteracao = urlParams.get('novaAlteracao');

        if (novoRegistro == 1) {
            alert('Imóvel cadastrado com sucesso');
            setTimeout(function() {
                location.href = '@Url.Action("Index", "Home")'
            }, 2000);
        }

        if (novoDelete == 1) {
            alert('Imóvel deletado com sucesso');
            setTimeout(function() {
                location.href = '@Url.Action("Index", "Home")'
            }, 2000);
        }

        if (novaAlteracao == 1) {
            alert('Imóvel alterado com sucesso');
            setTimeout(function() {
                location.href = '@Url.Action("Index", "Home")'
            }, 2000);
        }

        setaImoveis();
    });

    $("#btnNewImovel").click(function () {
        location.href='@Url.Action("Create", "Home")'
    });
</script>
